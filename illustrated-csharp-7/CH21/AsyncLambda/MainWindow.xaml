<Window
    x:Class="AsyncLambda.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AsyncLambda"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Async Lambda"
    Width="150"
    Height="115"
    Background="#FF7E3939"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Name="workStartedTextBlock" Margin="10,10" />
        <Button
            Name="startWorkButton"
            Width="100"
            Margin="4"
            Content="Start Work"
            Foreground="#FF1F3FB6">
            <Button.Background>
                <ImageBrush />
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush />
            </Button.BorderBrush>
        </Button>
    </StackPanel>
</Window>
