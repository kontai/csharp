<Window x:Class="PCBHDIControl.HDIControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PCB HDI板壓合參數控制系統" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 樣式定義 -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="AlternatingRowBackground" Value="LightGray" />
            <Setter Property="GridLinesVisibility" Value="All" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 盲埋孔管理區域 -->
        <GroupBox Grid.Row="0" Header="盲埋孔管理">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>

                <!-- 盲埋孔列表 -->
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding BlindVias}"
                          SelectedItem="{Binding SelectedBlindVia}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="名稱" Binding="{Binding Name}" Width="120" />
                        <DataGridTextColumn Header="起始層" Binding="{Binding StartLayer}" Width="100" />
                        <DataGridTextColumn Header="結束層" Binding="{Binding EndLayer}" Width="100" />
                        <DataGridTextColumn Header="鑽孔類型" Binding="{Binding DrillType}" Width="120" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 盲埋孔操作面板 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="盲埋孔操作" FontWeight="Bold" Margin="0,0,0,10" />
                    <Button Content="新增盲埋孔" /><!-- Click="AddBlindVia_Click"-->
                    <Button Content="編輯盲埋孔" />
                    <Button Content="刪除盲埋孔" />

                    <!-- 盲埋孔詳細資訊 -->
                    <GroupBox Header="詳細資訊" Margin="0,20,0,0">
                        <StackPanel DataContext="{Binding SelectedBlindVia}">
                            <TextBlock Text="名稱：" />
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" />

                            <TextBlock Text="起始層：" />
                            <TextBox Text="{Binding StartLayer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" />

                            <TextBlock Text="結束層：" />
                            <TextBox Text="{Binding EndLayer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" />

                            <TextBlock Text="鑽孔類型：" />
                            <ComboBox SelectedValue="{Binding DrillType, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="Laser" />
                                <ComboBoxItem Content="Mechanical" />
                                <ComboBoxItem Content="Plasma" />
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 壓合參數管理區域 -->
        <GroupBox Grid.Row="1" Header="壓合參數管理">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <!-- 壓合參數列表 -->
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding LaminationParameters}"
                          SelectedItem="{Binding SelectedLaminationParameter}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="製程步驟" Binding="{Binding ProcessStep}" Width="200" />
                        <DataGridTextColumn Header="關聯盲埋孔" Binding="{Binding AssociatedVia}" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 壓合參數操作面板 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="壓合參數操作" FontWeight="Bold" Margin="0,0,0,10" />
                    <Button Content="新增壓合參數" /> <!--Click="AddLaminationParameter_Click" -->
                    <Button Content="編輯參數" />
                    <Button Content="刪除參數" />

                    <!-- 壓合參數詳細資訊 -->
                    <GroupBox Header="參數設定" Margin="0,20,0,0">
                        <StackPanel DataContext="{Binding SelectedLaminationParameter}">
                            <TextBlock Text="製程步驟：" />
                            <TextBox Text="{Binding ProcessStep, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,10" />

                            <TextBlock Text="關聯盲埋孔：" />
                            <ComboBox
                                ItemsSource="{Binding DataContext.BlindVias, RelativeSource={RelativeSource AncestorType=Window}}"
                                DisplayMemberPath="Name"
                                SelectedValuePath="Name"
                                SelectedValue="{Binding AssociatedVia, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 操作控制區域 -->
        <GroupBox Grid.Row="2" Header="關聯操作">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="建立關聯"<!-- Click="CreateAssociation_Click"--!> Background="LightBlue"/>
                <Button Content="清除關聯" Background="LightCoral"/>
                <Button Content="匯出參數" Background="LightGreen"/>
                <Button Content="匯入參數" Background="LightYellow"/>
                <Button Content="儲存設定" Background="LightSalmon"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>