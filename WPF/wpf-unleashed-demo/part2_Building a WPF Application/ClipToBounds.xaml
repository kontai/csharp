<Window  x:Class="part2_Building_a_WPF_Application.ClipToBounds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClipToBounds Demo" Height="250" Width="400">
    <StackPanel Orientation="Horizontal" Background="LightGray" Margin="10">

        <!-- ClipToBounds = False -->
        <Canvas Width="80" Height="40" Background="Tan" ClipToBounds="False">
            <Button Content="OK" Width="100" Height="100" Canvas.Left="0" Canvas.Top="0"
                    RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                </Button.RenderTransform>
            </Button>
        </Canvas>

        <!-- ClipToBounds = True -->
        <Canvas Width="80" Height="40" Background="Tan" ClipToBounds="True" Margin="10,0,0,0">
            <Button Content="OK" Width="100" Height="100" Canvas.Left="0" Canvas.Top="0"
                    RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                </Button.RenderTransform>
            </Button>
        </Canvas>

    </StackPanel>
</Window>
