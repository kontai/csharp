<Window x:Class="Chapter_6__Input_Events.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter_6__Input_Events"
        mc:Ignorable="d"
        Title="About WPF 4.5 Unleashed"
        Background="OrangeRed"
        SizeToContent="WidthAndHeight"
        FontSize="18" FontStyle="Normal"
        >

    <StackPanel>
        <Label FontWeight="Bold" FontSize="20"
               Foreground="White"
               MouseRightButtonDown="AboutDialog_OnMouseRightButtonDown"
               >
            WPF 4.5 Unleashed
        </Label>

        <Label>© 2013 SAMS Publishing</Label>
        <Label>Installed Chapters:</Label>
        <ListBox>
            <ListBoxItem>Chapter 1</ListBoxItem>
            <ListBoxItem>Chapter 2</ListBoxItem>
        </ListBox>

        <StatusBar>
            You have successfully registered
            this product.
        </StatusBar>
    </StackPanel>
</Window>
