<Window x:Class="MySecondWPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySecondWPFProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="300">
    <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="textBoxName" Margin="5" Width="200" Height="100"/>
        <Button Margin="5" Click="ButtonBase_OnClick" Width="50" Height="20" Content="Change Name"></Button>

    </StackPanel>
</Window>
