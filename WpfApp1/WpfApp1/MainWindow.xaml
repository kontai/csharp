<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="{x:Static local:MainWindow.WindowTitle}"
    Width="500"
    Height="300"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <local:MyButton Content="Show" UserWindowType="{x:Type local:MyWindow}" />

        <Button Content="OK" />
        <Button Content="OK" />
        <Button Content="OK" Style="{x:Null}" />
        <!--  This button will not have the style applied  -->
        <ListBox Margin="5" HorizontalAlignment="Center">
            <ListBox.ItemsSource>
                <x:Array Type="sys:String" >
                    <sys:String>item1</sys:String>
                    <sys:String>item2</sys:String>
                    <sys:String>item3</sys:String>
                </x:Array>
            </ListBox.ItemsSource>
        </ListBox>
        <TextBlock FontSize="32" Text="{x:Static local:MainWindow.ShowText}"></TextBlock>
    </StackPanel>
</Window>