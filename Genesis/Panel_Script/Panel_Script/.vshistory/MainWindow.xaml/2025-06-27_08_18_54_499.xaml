<Window x:Class="Panel_Script.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Script"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="600" Width="800">
        <Window.Resources>
        <!-- HDI相關樣式定義 -->
        <Style x:Key="HDIGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="HDIDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="LightGray"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
        </Style>

        <Style x:Key="HDIButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="29" Margin="0,10,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" Width="127" FontFamily="Yu Gothic UI Semibold">
            <Run Language="zh-tw" Text="瑞太褔板框程式" />
        </TextBlock>

        <TabControl Margin="0,44,0,0">
            <TabItem Header="排板設定">
                <Grid>
                    <TextBox x:Name="six" HorizontalAlignment="Left" Margin="275,64,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" TextChanged="six_TextChanged" GotFocus="TextBox_GotFocus" />
                    <TextBox x:Name="siy" HorizontalAlignment="Left" Margin="502,65,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" TextChanged="siy_TextChanged" GotFocus="TextBox_GotFocus"  />
                    <Label Content="成型尺寸(X)" HorizontalAlignment="Left" Margin="170,61,0,0" VerticalAlignment="Top" />
                    <Label Content="成型尺寸(Y)" HorizontalAlignment="Left" Margin="392,60,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="wix" HorizontalAlignment="Left" Margin="275,102,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" TextChanged="wix_TextChanged" GotFocus="TextBox_GotFocus"  />
                    <TextBox x:Name="wiy" HorizontalAlignment="Left" Margin="502,103,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" TextChanged="wiy_TextChanged" GotFocus="TextBox_GotFocus"  />
                    <Label Content="下料尺寸(X)" HorizontalAlignment="Left" Margin="170,99,0,0" VerticalAlignment="Top" />
                    <Label Content="下料尺寸(Y)" HorizontalAlignment="Left" Margin="392,98,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="xstep_num" HorizontalAlignment="Left" Margin="275,139,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus"  />
                    <TextBox x:Name="ystep_num" HorizontalAlignment="Left" Margin="492,140,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus" />
                    <Label Content="排板數(X)" HorizontalAlignment="Left" Margin="170,136,0,0" VerticalAlignment="Top" />
                    <Label Content="排板數(Y)" HorizontalAlignment="Left" Margin="392,135,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="xstep_spec" HorizontalAlignment="Left" Margin="275,175,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus" />
                    <TextBox x:Name="ystep_spec" HorizontalAlignment="Left" Margin="492,175,0,0" TextWrapping="Wrap" Text=""
                         VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus" />
                    <Label Content="排間距板(X)" HorizontalAlignment="Left" Margin="170,171,0,0" VerticalAlignment="Top" />
                    <Label Content="排板間距(Y)" HorizontalAlignment="Left" Margin="392,171,0,0" VerticalAlignment="Top" />
                    <ComboBox x:Name="stpSlect" HorizontalAlignment="Left" Margin="335,12,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="stpSlect_SelectionChanged"/>
                    <Label Content=" 工作排板" HorizontalAlignment="Left" Margin="233,8,0,0" VerticalAlignment="Top" />
                    <Label Content="角度" HorizontalAlignment="Left" Margin="627,61,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="shipRotate" HorizontalAlignment="Left" Margin="686,63,0,0" VerticalAlignment="Top" Width="Auto" Height="27" SelectionChanged="shipRotate_SelectionChanged" RenderTransformOrigin="1.287,0.455" />
                    <Label Content="單位:" HorizontalAlignment="Left" Margin="627,8,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="unit_mminch" HorizontalAlignment="Left" Margin="686,10,0,0" VerticalAlignment="Top" Width="Auto" SelectionChanged="unit_mminch_SelectionChanged"/>
                </Grid>
            </TabItem>

            <TabItem Header="層別預覽">
                <Grid>
                    <ListView x:Name="layerListView" Margin="10">
                        <ListView.Resources>
                            <CollectionViewSource x:Key="GroupedLayers" Source="{Binding}">
                                <CollectionViewSource.GroupDescriptions>
                                    <PropertyGroupDescription PropertyName="Category"/>
                                </CollectionViewSource.GroupDescriptions>
                            </CollectionViewSource>
                        </ListView.Resources>
                        <ListView.ItemsSource>
                            <Binding Source="{StaticResource GroupedLayers}"/>
                        </ListView.ItemsSource>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="層別" Width="100" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="狀態" Width="80" DisplayMemberBinding="{Binding Status}" />
                                <GridViewColumn Header="描述" Width="200" DisplayMemberBinding="{Binding Description}" />
                            </GridView>
                        </ListView.View>
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" Margin="0,5,0,0"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="HDI壓合參數">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 盲埋孔管理區域 -->
                    <GroupBox Grid.Row="0" Header="盲埋孔管理" Style="{StaticResource HDIGroupBoxStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 盲埋孔列表 -->
                            <DataGrid Grid.Column="0" x:Name="blindViasDataGrid"
                                     Style="{StaticResource HDIDataGridStyle}"
                                     ItemsSource="{Binding BlindVias}"
                                     SelectedItem="{Binding SelectedBlindVia}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="名稱" Binding="{Binding Name}" Width="120"/>
                                    <DataGridTextColumn Header="起始層" Binding="{Binding StartLayer}" Width="100"/>
                                    <DataGridTextColumn Header="結束層" Binding="{Binding EndLayer}" Width="100"/>
                                    <DataGridTextColumn Header="鑽孔類型" Binding="{Binding DrillType}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- 盲埋孔操作面板 -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="盲埋孔操作" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Button Content="新增盲埋孔" Style="{StaticResource HDIButtonStyle}" Click="AddBlindVia_Click"/>
                                <Button Content="刪除盲埋孔" Style="{StaticResource HDIButtonStyle}" Click="DeleteBlindVia_Click"/>

                                <!-- 盲埋孔詳細資訊 -->
                                <GroupBox Header="詳細資訊" Margin="0,20,0,0" Style="{StaticResource HDIGroupBoxStyle}">
                                    <StackPanel DataContext="{Binding SelectedBlindVia}">
                                        <TextBlock Text="名稱："/>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                                        <TextBlock Text="起始層："/>
                                        <TextBox Text="{Binding StartLayer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                                        <TextBlock Text="結束層："/>
                                        <TextBox Text="{Binding EndLayer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                                        <TextBlock Text="鑽孔類型："/>
                                        <ComboBox SelectedValue="{Binding DrillType, UpdateSourceTrigger=PropertyChanged}">
                                            <ComboBoxItem Content="Laser"/>
                                            <ComboBoxItem Content="Mechanical"/>
                                            <ComboBoxItem Content="Plasma"/>
                                        </ComboBox>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 壓合參數管理區域 -->
                    <GroupBox Grid.Row="1" Header="壓合參數管理" Style="{StaticResource HDIGroupBoxStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 壓合參數列表 -->
                            <DataGrid Grid.Column="0" x:Name="laminationParametersDataGrid"
                                     Style="{StaticResource HDIDataGridStyle}"
                                     ItemsSource="{Binding LaminationParameters}"
                                     SelectedItem="{Binding SelectedLaminationParameter}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="製程步驟" Binding="{Binding ProcessStep}" Width="100"/>
                                    <DataGridTextColumn  Header="起始層別" Binding="{Binding LaminationStartLayer}" Width="100" />
                                    <DataGridTextColumn Header="結束層別" Binding="{Binding LaminationEndLayer}" Width="100" />
                                    <DataGridTextColumn Header="關聯盲埋孔" Binding="{Binding AssociatedVia}" Width="100"/>
                                    <DataGridTextColumn Header="裁板尺寸" Binding="{Binding LaminCutEdge}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- 壓合參數操作面板 -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="壓合參數操作" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Button Content="新增壓合參數" Style="{StaticResource HDIButtonStyle}" Click="AddLaminationParameter_Click"/>
                                <Button Content="刪除參數" Style="{StaticResource HDIButtonStyle}" Click="DeleteLaminationParameter_Click"/>

                                <!-- 壓合參數詳細資訊 -->
                                <GroupBox Header="參數設定" Margin="0,20,0,0" Style="{StaticResource HDIGroupBoxStyle}">
                                    <StackPanel DataContext="{Binding SelectedLaminationParameter}">
                                        <TextBlock Text="製程步驟："/>
                                        <TextBox Text="{Binding ProcessStep, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                                        <TextBlock Text="關聯盲埋孔："/>
                                        <ComboBox x:Name="associatedViaComboBox"
                                                 ItemsSource="{Binding DataContext.BlindVias, RelativeSource={RelativeSource AncestorType=Window}}"
                                                 DisplayMemberPath="Name"
                                                 SelectedValuePath="Name"
                                                 SelectedValue="{Binding AssociatedVia, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 操作控制區域 -->
                    <GroupBox Grid.Row="2" Header="關聯操作" Style="{StaticResource HDIGroupBoxStyle}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="建立關聯" Style="{StaticResource HDIButtonStyle}" Background="LightBlue" Click="CreateAssociation_Click"/>
                            <Button Content="清除關聯" Style="{StaticResource HDIButtonStyle}" Background="LightCoral" Click="ClearAssociation_Click"/>
                            <Button Content="儲存設定" Style="{StaticResource HDIButtonStyle}" Background="LightGreen" Click="SaveHDISettings_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <Button x:Name="run_btn" Content="執行" Margin="0,0,104,16" Background="Aquamarine" Click="onclick_run_btn" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="73" FontFamily="Microsoft YaHei UI"/>
        <Button x:Name="exit_btn" Content="退出" Margin="0,0,18,16" Background="#FFDB7070" Click="onclick_exit_btn" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="73" FontFamily="Microsoft YaHei UI"/>
    </Grid>
</Window>