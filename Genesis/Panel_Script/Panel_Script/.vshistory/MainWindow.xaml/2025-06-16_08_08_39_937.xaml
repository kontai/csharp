<Window x:Class="Panel_Script.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Script"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="460" Width="800">
    <Grid>
        <!-- 下拉選單區域 -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
            <TextBlock Text="選擇步驟:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>

            <ComboBox x:Name="stpSlect" 
                      Width="300"
                      Height="25"
                      DisplayMemberPath="."
                      SelectionChanged="StpSlect_SelectionChanged"/>

            <Button x:Name="refreshBtn" 
                    Content="重新載入" 
                    Width="80" 
                    Height="25"
                    Margin="10,0,0,0"
                    Click="RefreshBtn_Click"/>
        </StackPanel>

        <!-- 狀態顯示區域 -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10">
            <ScrollViewer>
                <TextBlock x:Name="statusText" 
                           Text="準備載入 Genesis 資料..."
                           Margin="10"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>