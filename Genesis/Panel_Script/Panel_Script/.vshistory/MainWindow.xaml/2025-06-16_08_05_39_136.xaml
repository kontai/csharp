<Window x:Class="Panel_Script.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Script"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="460" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="29" Margin="0,10,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" Width="127" FontFamily="Yu Gothic UI Semibold">
            <Run Language="zh-tw" Text="瑞太褔板框程式" />
        </TextBlock>
        <TextBox x:Name="six"  HorizontalAlignment="Left" Margin="275,108,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120"  />
        <TextBox x:Name="siy" HorizontalAlignment="Left" Margin="502,109,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120"  />
        <Label Content="成型尺寸(X)" HorizontalAlignment="Left" Margin="170,105,0,0" VerticalAlignment="Top" />
        <Label Content="成型尺寸(Y)" HorizontalAlignment="Left" Margin="392,104,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="wix" HorizontalAlignment="Left" Margin="275,146,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120"  />
        <TextBox x:Name="wiy" HorizontalAlignment="Left" Margin="502,147,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120"  />
        <Label Content="下料尺寸(X)" HorizontalAlignment="Left" Margin="170,143,0,0" VerticalAlignment="Top" />
        <Label Content="下料尺寸(Y)" HorizontalAlignment="Left" Margin="392,142,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="xstep_num"  HorizontalAlignment="Left" Margin="275,183,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="ystep_num" HorizontalAlignment="Left" Margin="492,184,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120" />
        <Label Content="排板數(X)" HorizontalAlignment="Left" Margin="170,180,0,0" VerticalAlignment="Top" />
        <Label Content="排板數(Y)" HorizontalAlignment="Left" Margin="392,179,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="xstep_spec" HorizontalAlignment="Left" Margin="275,219,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="ystep_spec" HorizontalAlignment="Left" Margin="492,219,0,0" TextWrapping="Wrap" Text=""
                 VerticalAlignment="Top" Width="120" />
        <Label Content="排間距板(X)" HorizontalAlignment="Left" Margin="170,215,0,0" VerticalAlignment="Top" />
        <Label Content="排板間距(Y)" HorizontalAlignment="Left" Margin="392,215,0,0" VerticalAlignment="Top" />
        <Button x:Name="run_btn" Content="執行" Margin="600,200,0,0" Background="Aquamarine" Click="onclick_run_btn" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <!-- 下拉選單區域 -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
            <TextBlock Text="選擇步驟:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>

            <ComboBox x:Name="stpSlect" 
                      Width="300"
                      Height="25"
                      DisplayMemberPath="."
                      SelectionChanged="StpSlect_SelectionChanged"/>

            <Button x:Name="refreshBtn" 
                    Content="重新載入" 
                    Width="80" 
                    Height="25"
                    Margin="10,0,0,0"
                    Click="RefreshBtn_Click"/>
        </StackPanel>

        <!-- 狀態顯示區域 -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10">
            <ScrollViewer>
                <TextBlock x:Name="statusText" 
                           Text="準備載入 Genesis 資料..."
                           Margin="10"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>